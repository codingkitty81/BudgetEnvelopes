<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kitty.budgetenvelopes">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EnvelopeActivity"
            android:label="@string/title_activity_envelope" />
        <activity
            android:name=".TransactionActivity"
            android:label="@string/title_activity_transaction" />
        <activity
            android:name=".AddEnvelopeActivity"
            android:label="@string/title_add_envelopes" />
        <activity
            android:name=".AddTransactionActivity"
            android:label="@string/title_add_transactions" />
        <activity android:name=".CalendarActivity" />
        <activity
            android:name=".DetailEnvelopeActivity"
            android:label="@string/title_detail_envelope" />
        <activity
            android:name=".DetailTransactionActivity"
            android:label="@string/title_detail_transaction" />
        <activity
            android:name=".EditTransactionActivity"
            android:label="@string/title_edit_transaction" />
        <activity
            android:name=".EditEnvelopeActivity"
            android:label="@string/title_edit_envelope" />
        <activity
            android:name=".TransferActivity"
            android:label="@string/title_activity_transfer" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".EnvelopeSettingsActivity"
            android:label="@string/title_envelope_settings" />
    </application>

</manifest>